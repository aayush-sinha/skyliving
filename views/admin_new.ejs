<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Admin</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#"
              >Home <span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Features</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Pricing</a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="http://example.com"
              id="navbarDropdownMenuLink"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              Dropdown link
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <h1>Add New Property</h1>
      <form action="/createRooms" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="propertyName">Name:</label>
          <input
            type="text"
            class="form-control"
            id="propertyName"
            placeholder="Enter name"
            name="propName"
            required
          />
        </div>

        <div class="row">
          <div class="form-group col">
            <label for="exampleFormControlSelect1">Location</label>
            <select
              class="form-control"
              id="exampleFormControlSelect1"
              name="propLocation"
            >
              <option>Law Gate</option>
              <option>Phagwara</option>
              <option>Jalandhar Cantt</option>
              <option>Rama Mandi</option>
            </select>
          </div>
          <div class="form-group col">
            <label for="propAddress">Address:</label>
            <input
              type="text"
              class="form-control"
              id="propAddress"
              placeholder="Enter address"
              name="propAddress"
              required
            />
          </div>
        </div>

        <div class="row">
          <div class="form-group col">
            <label for="propSize">Size:</label>
            <input
              type="text"
              class="form-control"
              id="propSize"
              placeholder="Enter Size in m^2"
              name="propSize"
              required
            />
          </div>
          <div class="form-group col">
            <label for="propLat">Latitude:</label>
            <input
              type="text"
              class="form-control"
              id="propLat"
              placeholder="Enter address"
              name="propLat"
              required
            />
          </div>
          <div class="form-group col">
            <label for="propLong">Longitude:</label>
            <input
              type="text"
              class="form-control"
              id="propLong"
              placeholder="Enter address"
              name="propLong"
              required
            />
          </div>
          <div class="form-group col">
            <label for="propRooms">Rooms:</label>
            <input
              type="text"
              class="form-control"
              id="propRooms"
              placeholder="Available"
              name="propRooms"
              required
            />
          </div>
        </div>
        <h4 style="margin-top: 20px;">Price Categories</h4>
        <div id="priceCategories" style="margin-bottom: 20px;">
          <div class="row border border-info">
            <div class="form-group col">
              <label for="propOccupancy">Occupancy Type</label>
              <select
                class="form-control"
                id="propOccupancy"
                name="propOccupancy"
              >
                <option>1 seater</option>
                <option>2 seater</option>
                <option>3 seater</option>
              </select>
            </div>
            <div class="form-group col">
              <label for="propCooling">Cooling Type</label>
              <select class="form-control" id="propCooling" name="propCooling">
                <option>AC</option>
                <option>Non AC</option>
              </select>
            </div>
            <div class="form-group col">
              <label for="propPrice">Price:</label>
              <input
                type="text"
                class="form-control"
                id="propPrice"
                placeholder="Enter Price"
                name="propPrice"
                required
              />
            </div>

            <div class="btn-group mr-2">
              <button
                type="button"
                class="btn btn-primary"
                id="addButton"
                onclick="addHandler()"
              >
                +
              </button>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="propLong">External Image:</label>
          <input
            type="file"
            class="form-control"
            id="propImgExt"
            placeholder="Enter Price"
            name="propImgExt"
            required
          />
        </div>
        <div class="row">
          <div class="form-group col">
            <label for="propLong">Internal Image 1:</label>
            <input
              type="file"
              class="form-control"
              id="propImg1"
              accept="image/*"
              placeholder="Enter Price"
              name="propImg1"
              required
            />
          </div>
          <div class="form-group col">
            <label for="propLong">Internal Image 2:</label>
            <input
              type="file"
              class="form-control"
              id="ppropImg2"
              accept="image/*"
              placeholder="Enter Price"
              name="propImg2"
              required
            />
          </div>
          <div class="form-group col">
            <label for="propLong">Internal Image 3:</label>
            <input
              type="file"
              class="form-control"
              id="propImg3"
              accept="image/*"
              placeholder="Enter Price"
              name="propImg3"
              required
            />
          </div>
        </div>

        <div class="form-group">
          <label for="exampleFormControlSelect2"
            >Features (Select Multiple)</label
          >
          <select
            multiple
            class="form-control"
            id="exampleFormControlSelect2"
            name="propFeatures"
          >
            <option>Wifi</option>
            <option>Fridge</option>
            <option>Mattress</option>
            <option>TV</option>
            <option>Geyser</option>
            <option>Parking</option>
            <option>CCTV</option>
            <option>Power Backup</option>
          </select>
        </div>

        <input type="submit" value="submit" />
      </form>
    </div>
    <script src="/admin/js/createRoom.js"></script>
  </body>
</html>
